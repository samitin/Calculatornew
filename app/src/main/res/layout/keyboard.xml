        android:id="@+id/button_8"
        android:text="@string/_8"
        style="@style/KeyboardStyle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_9"
        android:text="@string/_9"
        style="@style/KeyboardStyle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_multiply"
        android:text="@string/text_multiply"
        style="@style/KeyboardStyle"
        android:background="@color/button_operators_backgrount_color"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_point"
        android:text="@string/text_point"
        style="@style/KeyboardStyle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_0"
        android:text="@string/_0"
        style="@style/KeyboardStyle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_equals"
        android:text="@string/text_equals"
        style="@style/KeyboardStyle"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_division"
        android:text="@string/text_division"
        style="@style/KeyboardStyle"
        android:background="@color/button_operators_backgrount_color"/>
